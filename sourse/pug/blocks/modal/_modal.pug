mixin modal()
	//  start modals
	+b.modal-win(id="modal-call" class=" " style="display: none" )
		+form()
		//-+form-wrap
			.text-center
				+e.title.h3.ttu Обратный звонок
				p.after-headline Заполните заявку и&nbsp;мы&nbsp;с&nbsp;Вами свяжемся в&nbsp;течение 15&nbsp;минут
			+input("Ваше Имя")(required)
			+e.BUTTON.btn.btn(type="submit"  )
			+polite()
	// #modal-call
	+form-wrap()(id="modal-thanks" class="modal-win modal-form" style="display: none")
		.modal-container.modal-thanks-cont
			.text-center
				+e.img-done
					img(src="img/@2x/done.png", alt="")
				+e.title.h3.ttu ВАША ЗАЯВКА ПРИНЯТА!
				p.after-headline Скоро с Вами свяжутся!
	//#modal thanks
	
	// end modals